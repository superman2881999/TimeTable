<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/MS"
        android:layout_marginTop="20dp"
        android:layout_below="@id/imageView"
        android:text="Bạn là :"/>

    <RadioGroup
        android:id="@+id/rg_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_choose"
        android:layout_alignLeft="@id/MS">
        <RadioButton
            android:id="@+id/rb_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giáo viên"
            />
        <RadioButton
            android:id="@+id/rb_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Sinh viên"/>
    </RadioGroup>

    <EditText
        android:id="@+id/MS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rg_choose"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="18dp"
        android:hint="Nhập MSSV"
        android:layout_marginRight="50dp"
        android:background="@drawable/border2"
        android:drawableRight="@drawable/ic_person_black_24dp"
        android:padding="16dp" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/MS"
        android:layout_alignLeft="@+id/MS"
        android:layout_marginTop="20dp"
        android:text="Nhớ mật khẩu"
        android:checked="true"/>
    <Button
        android:id="@+id/DangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkbox"
        android:text="Đăng nhập"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/border"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bản quyền thuộc về team 7"
        android:textSize="10sp"
        android:layout_alignParentBottom="true"
        android:textColor="#000000"
        android:gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        app:srcCompat="@drawable/bk1" />

</RelativeLayout>